<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.issue.home.IssueHomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_issues" />
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_issues"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/HeadLine6"
                android:layout_width="216dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:text="@string/tool_bar_title" />

            <ImageButton
                android:id="@+id/btn_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/appbar_filter_icon"
                android:padding="5dp"
                android:src="@drawable/ic_filter_list"
                app:tint="@color/skyBlue" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/appbar_search_icon"
                android:padding="3dp"
                android:src="@drawable/ic_search"
                app:tint="@color/skyBlue" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/ll_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/skyBlue"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_filter"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/skyBlue"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/HeadLine6"
                    android:layout_width="146dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="32dp"
                    android:text="필터"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/btn_filter_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/skyBlue"
                    android:padding="5dp"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:id="@+id/tv_filter_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/appbar_search_icon"
                    android:src="@drawable/ic_search"
                    android:text="적용"
                    android:textColor="@color/white"
                    app:tint="@color/skyBlue" />

                <TextView
                    android:id="@+id/tv_filter_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="24dp"
                    android:backgroundTint="@color/white"
                    android:contentDescription="@string/appbar_search_icon"
                    android:src="@drawable/ic_search"
                    android:text="초기화"
                    android:textColor="@color/white"
                    app:tint="@color/skyBlue" />

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="328dp"
                android:background="@color/skyBlue"
                android:layout_marginTop="8dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:textColor="@color/white"
                    style="@style/Subtitle1"
                    android:layout_height="24dp"
                    android:text="상태" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="24dp"
                    android:id="@+id/tv_filter_issue"
                    style="@style/Subtitle1.Bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:text="열린이슈" />

                <ImageButton
                    android:id="@+id/btn_filter_issue_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/skyBlue"
                    android:src="@drawable/ic_arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="328dp"
                android:background="@color/skyBlue"
                android:layout_marginTop="8dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:textColor="@color/white"
                    style="@style/Subtitle1"
                    android:layout_height="24dp"
                    android:text="작성자" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="24dp"
                    android:id="@+id/tv_filter_account"
                    style="@style/Subtitle1.Bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:text="선택" />

                <ImageButton
                    android:id="@+id/btn_filter_account_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/skyBlue"
                    android:src="@drawable/ic_arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="328dp"
                android:background="@color/skyBlue"
                android:layout_marginTop="8dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:textColor="@color/white"
                    style="@style/Subtitle1"
                    android:layout_height="24dp"
                    android:text="레이블" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="24dp"
                    android:id="@+id/tv_filter_label"
                    style="@style/Subtitle1.Bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:text="선택" />

                <ImageButton
                    android:id="@+id/btn_filter_label_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/skyBlue"
                    android:src="@drawable/ic_arrow_down" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="328dp"
                android:background="@color/skyBlue"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:paddingTop="12.5dp"
                android:paddingBottom="12.5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="60dp"
                    android:textColor="@color/white"
                    style="@style/Subtitle1"
                    android:layout_height="24dp"
                    android:text="마일스톤" />

                <TextView
                    android:layout_width="212dp"
                    android:layout_height="24dp"
                    android:id="@+id/tv_filter_milestone"
                    style="@style/Subtitle1.Bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="16dp"
                    android:text="선택" />

                <ImageButton
                    android:id="@+id/btn_filter_milestone_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:layout_marginLeft="16dp"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/skyBlue"
                    android:src="@drawable/ic_arrow_down" />

            </LinearLayout>



        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_plus_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_add_circle_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="@color/skyBlue" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>