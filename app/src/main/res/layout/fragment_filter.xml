<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filter.FilterFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/issue_tracker_blue"
        android:drawableStart="@drawable/ic_clear"
        android:theme="@style/ToolbarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_clear"
        app:title="필터"
        app:titleTextAppearance="@style/HeadLine6">

        <TextView
            android:id="@+id/tv_filter_apply"
            style="@style/Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:enabled="false"
            android:text="적용" />

        <TextView
            android:id="@+id/tv_filter_reset"
            style="@style/Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="24dp"
            android:enabled="false"
            android:text="초기화" />


    </com.google.android.material.appbar.MaterialToolbar>


</androidx.constraintlayout.widget.ConstraintLayout>