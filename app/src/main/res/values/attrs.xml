<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomToolbar">
        <attr name="toolbarTitle" format="string" />
        <attr name="toolbarNavigationIcon" format="reference" />
        <attr name="firstActionText" format="string" />
        <attr name="secondActionText" format="string" />
    </declare-styleable>

    <declare-styleable name="ConditionBar">
        <attr name="conditionBarTitle" format="string" />
        <attr name="conditionBarBackground" format="reference" />
        <attr name="conditionBarTextAppearance" format="reference" />
        <attr name="conditionBarBackgroundTint" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomImageButton">
        <attr name="customImageButtonTitle" format="string" />
        <attr name="customImageButtonImage" format="reference" />
        <attr name="customImageButtonTintColor" format="reference|color" />
    </declare-styleable>

</resources>

